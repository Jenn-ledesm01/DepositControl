@model DepositControl.Bussines.WarehouseManager

@{
    Layout = "~/Views/Shared/_LayoutBcri.cshtml";
    List<SelectListItem> stateList = (List<SelectListItem>)ViewBag.stateList;
    List<SelectListItem> userList = (List<SelectListItem>)ViewBag.UsuarioList;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar jefe de Depósito</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @if (ViewBag.Alert != null)
    {
        <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Error!</strong> @ViewBag.Alert
        </div>
    }

    @using (Html.BeginForm("Edit", "WarehouseManager", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

<div class="form-horizontal">
    <h1><b>Editar jefe de Depósito</b></h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-sm-2">Fecha de Inicio</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "date", @Value = Model.StartDate.ToString("yyyy-MM-dd") } })
            @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-sm-2">DNI</label>
        <div class="col-sm-4">
            @Html.EditorFor(model => model.DNI, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DNI, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Usuario</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(model => model.User.Id, userList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.User.Id, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Estado</label>
        <div class="col-sm-4">
            @Html.DropDownListFor(model => model.StateWarehouseManager.Id, stateList, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.StateWarehouseManager.Id, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-default" />
        </div>
    </div>

</div>
    }

    <div>
        @Html.ActionLink("Volver a la Grilla", "Index", "WarehouseManager")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>