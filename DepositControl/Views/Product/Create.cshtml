@model DepositControl.Bussines.Product

@{
    Layout = "~/Views/Shared/_LayoutBcri.cshtml";
    IEnumerable<SelectListItem> stateProductList = (IEnumerable<SelectListItem>)ViewBag.StateProductList;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Producto</title>
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    @if (ViewBag.Alert != null)
    {
        <div class="alert alert-dismissable alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <strong>Error!</strong> @ViewBag.Alert
        </div>
    }

    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { @id = "productForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h1><b>Crear Producto</b></h1>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Name, "Nombre", new { @class = "control-label col-sm-1", @style = "text-align:left;" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, "Descripción", new { @class = "control-label col-sm-1", @style = "text-align:left;" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, "Precio", new { @class = "control-label col-sm-1", @style = "text-align:left;" })
                <div class="col-sm-3">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number", @step = "0.01", @min = "0" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-8 text-right">
                    <input type="submit" value="Crear" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver a la Grilla", "Index", "Product")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>